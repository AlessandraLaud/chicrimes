@page
@model CrimeListModel
@{
  ViewData["Title"] = "List Of Crimes";
}

<div style="padding: 40px 80px 40px 80px;">
    <h2 style="margin-bottom: 40px">Crime List</h2> 

    @{
         if (@Model.EX != null)
         {
           <br />
             <br />
             <h3 style="color:red">**ERROR: @Model.EX.Message</h3>
             <br />
             <hr />
             <br />
             <br />
         }
         else
         {
            <table class="table">  
                <thead style="color: #1b7ef7; font-size: 17px;">  
                    <tr>  
                        <th>Code</th>  
                        <th>Primary Description</th>  
                        <th>Secondary Description</th>  
                        <th>Frequency</th>  
                    </tr>  
                </thead>  
                <tbody>  
                    @foreach (var item in Model.CrimeList)  
                    {  
                        <tr>   
                            <td>@item.IUCR</td>  
                            <td>@item.PrimaryDesc</td>  
                            <td>@item.SecondaryDesc</td>  
                            <td>@item.NumTimes</td>
                        </tr> 		
                    }  
                </tbody>  
            </table> 
         }
    }
</div>